# .env.local - Environment Variables for Email AI Agent
# Copy this to .env.local and fill in your actual values

# Supabase Configuration (from Step 1)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# API Security
API_SECRET_KEY=your-secret-key-for-api-access
ENCRYPTION_KEY=your-base64-encoded-encryption-key

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=your-anthropic-key-here (if using Anthropic)

# Telegram Configuration
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_CHAT_ID=your-chat-id-here

# Optional: Default Settings
DEFAULT_AI_PROVIDER=openai
DEFAULT_AI_MODEL=gpt-3.5-turbo
DEFAULT_CHECK_INTERVAL=5

# Development/Debug Settings
DEBUG_MODE=true
LOG_LEVEL=info